<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.DayNight.Dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mhBilling">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/hearder"
        android:text="Buy Premium"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#6E70F0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        app:layout_constraintBottom_toTopOf="@id/sale"
        app:layout_constraintTop_toBottomOf="@+id/hearder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:id="@+id/content"
            android:text="Buy premium for only $2. Remove ads permanently."
            android:textColor="#3B3C3E"
            android:textSize="18dp"
            android:layout_toStartOf="@+id/imgcrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgcrown"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_crown"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
   <RelativeLayout
       android:layout_margin="20dp"
       android:id="@+id/sale"
       app:layout_constraintBottom_toTopOf="@id/btnBuy"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/imgSale"
           android:src="@drawable/ic_sale"
           android:layout_width="match_parent"
           android:layout_height="150dp"/>
       <TextView
           android:layout_below="@+id/imgSale"
           android:layout_centerInParent="true"
           android:id="@+id/txtsale"
           android:textStyle="bold"
           android:textColor="#ECDF00"
           android:text="Only $2 left"
           android:textSize="30dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>
    <Button
        android:textAllCaps="false"
        android:id="@+id/btnBuy"
        android:background="#6E70F0"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Buy Now"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>